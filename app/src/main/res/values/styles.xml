<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="toolbar_style">
        
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbar_color_style">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    
    <style name="button_text_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="tweet_text_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_background_style" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorBlue</item>
    </style>
</resources>
