<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="@string/add_topic"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"/>

        <EditText
            android:hint="@string/topic_display_name_hint"
            android:id="@+id/et_topic_display_name"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorGrey"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:padding="8dp"/>

        <EditText
            android:hint="@string/topic_query_hint"
            android:id="@+id/et_topic_query"
            android:textColor="@color/colorGrey"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="16sp"
            android:fontFamily="@font/noto_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="@string/add_topic"
            android:id="@+id/apb_add_topic"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="60dp"
            android:theme="@style/button_background_style"
            android:textAppearance="@style/button_text_style" />
    </LinearLayout>
</layout>